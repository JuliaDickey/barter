<header class="head-three form-header">
</header>
<section class="form-intro">
  <h1>Provide us with some basic information and you'll be directed your profile where you can start bidding away!</h1>
</section>
<section class="form-content">
  <form class="signup-form" action="/users/new" method="post">
    <h4>User Details:</h4>
    <label for="first_name">First Name</label>
    <input type="text" name="first_name" id="first_name">
    <label for="last_name">Last Name</label>
    <input type="text" name="last_name" id="last_name">
    <label for="email_form">Email</label>
    <input type="text" name="email_form" id="email_form">
    <label for="password_form">Password (minimum of 8 characters)</label>
    <input type="password" name="password_form" id="password_form">
    <label for="zipcode">Zipcode</label>
    <input type="text" name="zipcode" id="zipcode">
    <button  id="myBtn" type="submit">Create Account</button>
  </form>
  <div class="error-message">
    <% if @user %>
    <h3>A few more things please!</h3>
    <ul>
      <% @user.errors().full_messages().each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
    <% end %>
  </div>
</section>
