<header class="head-one form-header">
</header>
<section class="profile-content">
  <h1>Welcome Admin</h1>
  <h3>Use the tools below to customize the barter pages!</h3>
<div class="admin">
  <section class="tags-created">
  <!-- LIST OF ALL TAGS -->
    <form action="/tags/new" method="post">
      <h4>Add tags for users to archive their barters:</h4>
      <label for="tags"></label>
      <input type="text" name="tag" id="tag">
      <button type="submit">Add tag</button>
    </form>
    <h4>Tags you've created:</h4>
    <% if @tags %>
    <ul>
      <% @tags.each do |tag| %>
      <li class="tag-name"><%= tag.name %></li>
      <% end %>
    </ul>
    <% end %>
  </section>
  <section class="delete">
    <!-- DELETE TAGS FORM -->
    <h4>Delete Tags</h4>
    <form class="" action="/tags/delete" method="post">
      <% if @tags %>
      <input type="hidden" name="_method" value="delete">
      <label for="delete_tags">Select Tag:</label>
      <select class="" name="tag_id" id="tag_id">
        <% @tags.each do |tag| %>
        <option value="<%= tag.id %>"><%= tag.name %></option>
        <% end %>
      </select>
      <button type="submit" name="button">Delete</button>
      <% end %>
    </form>

    <!-- DELETE AN ACCOUNT -->
    <h4>Close an account</h4>
    <form class="" action="/users/delete" method="post">
      <input type="hidden" name="_method" value="delete">
      <% if @users.any? %>
      <label for="users">Users</label>
      <select class="" name="user_id" id="user_id">
        <% @users.each do |user| %>
        <option value="<%= user.id %>"><%= user.first_name %> <%= user.last_name %></option>
        <% end %>
      </select>
      <% end %>
      <button type="submit">Close Account</button>
    </form>
  </section>
</div>
</section>
